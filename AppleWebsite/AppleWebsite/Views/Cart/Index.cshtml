@model IEnumerable<AppleWebsite.Models.Cart>

@{
	ViewBag.Title = "Index";
}

<div class="col cart container-fluid mb-4 shadow " style="min-height:85vh; width:85vw; background-color:white; border-radius:1%; ">

	<div class="row ">
		<div class=" col-xxl-8">
			<div class="title m-4">
				<div class="row">
					<div class="col"><h4><b>Shopping Cart</b></h4></div>
					<div class="col align-self-center text-right text-muted">@Model.Count() items</div>
				</div>
			</div>
			<div class="row border-top border-bottom ">

				<div class="row main align-items-center">
					<div class="col-2">
					</div>
					<div class="col">
					</div>
					<div class="col ">
						Quantity
					</div>
					<div class="col ">
						Cost
					</div>
					<div class="col">
						Storage
					</div>
					<div class="col">

					</div>
				</div>
			</div>
			<div class="row  pb-4">
				@foreach (var item in Model)
				{
					<div class="row main align-items-center border-bottom">
						<div class="col-2"><img class="img-fluid" src="~/DeviceAppleImage/@item.Device.Category.name_cate/@item.Device.img"></div>
						<div class="col">
							<div class="row text-muted">@item.Device.Category.name_cate</div>
							<div class="row">@item.Device.name_dev</div>
						</div>
						<div class="col ">
							@item.quantity
						</div>
						<div class="col ">
							@item.Device.cost.ToString("C")
						</div>
						<div class="col">
							@item.storage
						</div>
						<div class="col">
							<a class="text-danger" href="~/cart/delete/@item.id_cart"><i class="fa fa-close"></i></a>
						</div>
					</div>
				}
			</div>
		</div>
		<div class=" p-5 col-xxl-4 col-lg-12 col-12 col-xl-12 col-sm-8 col-md-12" style="background-color: rgb(221,221,221); min-height: 85vh; ">
			<div class="col-4" style="width:100%;">
				<div class=""><h5><b>Summary</b></h5></div>
				<hr>
				<div style="display:flex; justify-content:space-between;">
					<div>ITEMS: @Model.Count()</div>
				</div>
				<form class="mt-5">
					<p>SHIPPING</p>
					<label class="form-label ">Full name</label>
					<input class="form-control shadow-none" id="code" placeholder="">
					<label class="form-label ">Phone number</label>
					<input class="form-control shadow-none" id="code" placeholder="">
					<label class="form-label ">Address name</label>
					<input class="form-control shadow-none" type="text" id="code" placeholder="">
				</form>
				<div class="mt-4" style="display:flex;flex-direction:row; justify-content:space-between;">
					<div class="text-dark">TOTAL PRICE</div>
					<div class="text-danger fw-bold" > @Model.Sum(row => row.Device.cost).ToString("C")</div>
				</div>
				<div class="d-flex justify-content-center">
				<button  class="btn btn-outline-secondary text-center mx-auto" type="submit">CHECK OUT</button>
				</div>
			</div>

		</div>
	</div>


</div>
