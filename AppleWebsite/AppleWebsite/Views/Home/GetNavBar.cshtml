@model List<AppleWebsite.Models.Category>

@{
	Layout = null;
}
<style>
	.nav-item {
		transition: opacity 0.2s ease-in-out;
	}

		.nav-item:hover {
			opacity: 0.5;
		}
</style>
<nav class="navbar navbar-expand-lg navbar-light p-0 w-100 px-5" style="z-index:99999; background-color: rgba(50,50,50,0.95); position:fixed; top:0;">
	<div class="container-fluid text-center">
		<a class="navbar-brand" style="color: #f5f5f7; font-size: 12px;" href="~/home/index"><img src="~/DeviceAppleImage/logo_apple.svg" alt="Apple.com" /></a>
		<button style="color: #f5f5f7;" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
			<span style="color: #f5f5f7;" class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse justify-content-between" id="navbarScroll">
			<div>
				<ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll justify-content-md-center" style="--bs-scroll-height: 100px;">
					<li class="nav-item">
						<a class="nav-link px-3" style="color: #f5f5f7; font-size: 12px;" href="~/category/index">Store</a>
					</li>
					@foreach (var item in Model)
					{
						<li class="nav-item">
							<a class="nav-link px-3" style="color: #f5f5f7; font-size: 12px;" href="~/device/index/@item.id_cate">@item.name_cate</a>
						</li>
					}
					<li class="nav-item">
				<a class="nav-link px-3" style="color: #f5f5f7; font-size: 12px;" href="~/cart/index"><i class="fa fa-shopping-cart"></i></a>
					</li>
				</ul>
			</div>
			<div>

				<div class="input-group m-2">
					<input class="form-control  border-0 shadow-none" type="search" placeholder="search" id="search-input">
					<a href="#" class="btn btn-outline-secondary bg-white  border-0 " type="button">
						<i class="fa fa-search"></i>
					</a>
				</div>
			</div>

		</div>
	</div>
</nav>
